{
  "name": "moac",
  "version": "0.1.0",
  "description": "Mayastor's control plane",
  "main": "moac",
  "bin": {
    "moac": "./moac",
    "mbus": "./mbus.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openebs/Mayastor.git",
    "directory": "csi/moac"
  },
  "scripts": {
    "prepare": "./bundle_protos.sh",
    "clean": "rm -f csi.js grpc_client.js index.js node.js registry.js replica.js rest_api.js pool.js nexus.js watcher.js node_operator.js pool_operator.js volume.js volumes.js volume_operator.js workq.js *.js.map",
    "purge": "rm -rf node_modules proto csi.js grpc_client.js index.js node.js registry.js replica.js rest_api.js pool.js nexus.js watcher.js node_operator.js pool_operator.js volume.js volumes.js volume_operator.js workq.js *.js.map",
    "compile": "tsc --pretty",
    "start": "./moac",
    "test": "mocha test/index.js",
    "check": "semistandard --verbose",
    "fix": "semistandard --fix"
  },
  "license": "ISC",
  "dependencies": {
    "@grpc/proto-loader": "^0.6.2",
    "@kubernetes/client-node": "^0.14.3",
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.14.169",
    "express": "^4.17.1",
    "grpc-promise": "^1.4.0",
    "grpc-uds": "^0.1.6",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "nats": "^2.0.4",
    "sleep-promise": "^9.1.0",
    "winston": "^3.3.3",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^8.4.0",
    "semistandard": "^16.0.0",
    "sinon": "^10.0.0",
    "source-map-support": "^0.5.19",
    "typescript": "^4.2.4",
    "wtfnode": "^0.8.4"
  },
  "files": [
    "*.js",
    "crds/*.yaml",
    "bundle_protos.sh"
  ],
  "semistandard": {
    "env": [
      "mocha",
      "node"
    ]
  }
}
